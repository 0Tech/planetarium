#!/bin/sh

set -e

APP=@APP@
APP_SOURCE_DIR=@APP_SOURCE_DIR@

. @CMAKE_SOURCE_DIR@/util/common.sh

assert_variables APP \
				 APP_SOURCE_DIR \
				 SUM

# path for the checksum
mkdir -p $APP
sum=$(realpath $SUM)

source_dir=$APP_SOURCE_DIR/$APP
[ -d $source_dir ]

cd $source_dir

tar -c $(ls -A1 | sort) | sha512sum | awk '{print $1}' >$sum
