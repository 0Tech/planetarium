#!/bin/sh

set -xe

. @CMAKE_SOURCE_DIR@/fixture/util/common.sh
. @CMAKE_SOURCE_DIR@/fixture/util/service.sh

# TODO: add the fixture
cosmovisor=@COSMOVISOR_BINARY_DIR@/cosmovisor
prepare_cosmovisor() {
	if [ ! -f $cosmovisor ]
	then
		cmake --build @CMAKE_BINARY_DIR@ --target build_cosmovisor
	fi
}

install_daemon() {
	local region_id=$1
	local chain_id=$2

	local admin=$(service_name administrator $region_id $chain_id)

	# push binaries to admin
	local version=@FIXTURE_DAEMON_VERSION@
	service_exec $admin "mkdir -p ~/daemon/$version"
	service_push $admin $cosmovisor /root/
	# service_push $admin @DAEMON_BINARY_DIR@/$version/bundle.tar.gz ~/daemon/$version/
	service_push $admin @DAEMON_BINARY_DIR@/$version/bundle.tar.gz /root/

	# install cosmovisor
	service_exec $admin "cd && ansible-playbook -i inventory cosmovisor.yml \\
-e src=cosmovisor \\
-e daemon_name=@DAEMON_NAME@ \\
-e daemon_home=@DAEMON_HOME@"

	# install daemon
	service_exec $admin "cd && ansible-playbook -i inventory daemon.yml \\
-e src=bundle.tar.gz \\
-e region_id=$region_id \\
-e chain_id=$chain_id \\
-e timeout_propose=@FIXTURE_CONFIG_TIMEOUT_PROPOSE@ \\
-e timeout_prevote=@FIXTURE_CONFIG_TIMEOUT_PREVOTE@ \\
-e timeout_precommit=@FIXTURE_CONFIG_TIMEOUT_PRECOMMIT@ \\
-e timeout_commit=@FIXTURE_CONFIG_TIMEOUT_COMMIT@ \\
-e keyring_backend=@FIXTURE_CLIENT_KEYRING_BACKEND@"
}

gentx() {
	local region_id=$1
	local chain_id=$2
	local output_dir=$3

	local admin=$(service_name administrator $region_id $chain_id)
	service_exec $admin "cd && ansible-playbook -i inventory gentx.yml \\
-e dest=gentx.json \\
-e bond_denom=@FIXTURE_STATE_BOND_DENOM@ \\
-e delegation=@FIXTURE_STATE_DELEGATION@"
	service_fetch $admin /root/gentx.json $output_dir/gentx-$region_id.json
}

assert_variables NUM_CHAINS \
				 NUM_REGIONS \
				 NUM_SENTRIES

chain_id=${1:-$(chain_name 0)}

prepare_cosmovisor

pending_pids=
for _ri in $(seq 0 $(expr $NUM_REGIONS - 1))
do
	_region_id=$(region_name $_ri)

	install_daemon $_region_id $chain_id &
	pending_pids="$pending_pids $!"
done
wait_pids $pending_pids

gentx_dir=artifact/$chain_id/gentx
rm -rf $gentx_dir
mkdir -p $gentx_dir
pending_pids=
for _ri in $(seq 0 $(expr $NUM_REGIONS - 1))
do
	_region_id=$(region_name $_ri)

	gentx $_region_id $chain_id $gentx_dir &
	pending_pids="$pending_pids $!"
done
wait_pids $pending_pids

seed_dir=artifact/$chain_id/seed
rm -rf $seed_dir
mkdir -p $seed_dir
genesis_dir=artifact/$chain_id/genesis
rm -rf $genesis_dir
mkdir -p $genesis_dir
for _ri in 0
do
	_region_id=$(region_name $_ri)

	_admin=$(service_name administrator $_region_id $chain_id)

	# configure peers
	service_exec $_admin "cd && ansible-playbook -i inventory peers.yml \\
-e dest=seed.json"
	service_fetch $_admin /root/seed.json $seed_dir/seed-$_region_id.json

	# generate genesis
	service_exec $_admin "cd && rm -rf gentx"
	service_push $_admin $gentx_dir /root/gentx
	service_exec $_admin "cd && ansible-playbook -i inventory genesis.yml \\
-e dest=genesis.json \\
-e gentx=gentx \\
-e bond_denom=@FIXTURE_STATE_BOND_DENOM@ \\
-e balance=@FIXTURE_STATE_BALANCE@ \\
-e unbonding_time=@FIXTURE_STATE_UNBONDING_TIME@ \\
-e min_deposit=@FIXTURE_STATE_MIN_DEPOSIT@ \\
-e voting_period=@FIXTURE_STATE_VOTING_PERIOD@"
	service_fetch $_admin /root/genesis.json $genesis_dir/genesis.json
done

# collect seeds
cat $seed_dir/seed-$(region_name 0).json | jq -ns '.seeds |= inputs' >$seed_dir/seeds.json

pending_pids=
for _ri in $(seq 0 $(expr $NUM_REGIONS - 1))
do
	_region_id=$(region_name $_ri)

	_admin=$(service_name administrator $_region_id $chain_id)

	# configure
	service_push $_admin $seed_dir/seeds.json /root/seeds.json
	service_exec $_admin "cd && ansible-playbook -i inventory peers.yml \\
-e @seeds.json" &
	pending_pids="$pending_pids $!"
done
wait_pids $pending_pids

pending_pids=
for _ri in $(seq 0 $(expr $NUM_REGIONS - 1))
do
	_region_id=$(region_name $_ri)

	_admin=$(service_name administrator $_region_id $chain_id)

	# blocksync
	service_push $_admin $genesis_dir/genesis.json /root/genesis.json
	service_exec $_admin "cd && ansible-playbook -i inventory blocksync.yml \\
-e src=genesis.json" &
	pending_pids="$pending_pids $!"
done
wait_pids $pending_pids

unhealthy_services=$(get_services _ _ $chain_id | grep -Ev '^administrator\.')
while [ -n "$unhealthy_services" ]
do
	_services="$unhealthy_services"
	unhealthy_services=
	for _service in $_services
	do
		if [ $(service_health $_service) != healthy ]
		then
			unhealthy_services="$unhealthy_services $_service"
			if [ $(service_status $_service) != running ]
			then
				echo "Error on: " $_service >&2
				false
			fi
			sleep 1
		fi
	done
done
